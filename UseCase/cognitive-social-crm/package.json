{
  "name": "cognitive-social-crm",
  "version": "1.0.0",
  "description": "Cognitive Tweets Analyzer App",
  "main": "app.js",
  "scripts": {
    "install": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd client && npm start",
    "start:server": "cd server && npm start",
    "start:prod": "export NODE_ENV=production && cd server && node start.js",
    "build": "npm run build:client",
    "postbuild": "cd dist && mkdir server && cd .. && cp -r server/src/ dist/server && cp server/server.js dist/server && cp server/start.js dist/server && cp server/package.json dist/server && cp package.json dist/ && cp client/package.json dist/client",
    "prebuild": "rm -rf dist",
    "build:client": "cd client && npm run build:prod",
    "build:prod": "\"npm run preinstall:client\" && \"npm run build:clientProd\"",
    "build:clientProd": "cd client && npm run build:prod",
    "test:client": "cd client && npm test",
    "pretest:client": "cd client && npm run lint"
  },
  "author": "Sanjeev Ghimire",
  "license": "Apache-2.0",
  "dependencies": {
    "concurrently": "^3.6.1",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "tslint-eslint-rules": "^5.4.0"
  }
}
